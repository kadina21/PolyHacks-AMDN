<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient">

    <EditText
        android:id="@+id/enterNumeroContact2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numeroContactConfiance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:hint="Numéro"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/enterLienParente2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lienDeParente"
        android:ems="10"
        android:hint="Lien de parenté"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/entreNomContact2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomContactInscription"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Nom du contact"
        android:inputType="" />

    <TextView
        android:layout_width="230dp"
        android:layout_height="1dp"
        android:id="@+id/barre"
        android:layout_below="@+id/btnInscription"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/box" />


    <TextView
        android:id="@+id/inscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Inscription" />

    <TextView
        android:id="@+id/nomInscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="130dp"
        android:text="Nom" />

    <TextView
        android:id="@+id/mdpInscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="283dp"
        android:layout_marginEnd="226dp"
        android:text="Mot de passe" />


    <EditText
        android:id="@+id/enterLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="101dp"
        android:ems="10"
        android:hint="Nom"
        android:inputType="textPersonName" />


    <Button
        android:id="@+id/btnInscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterNumeroContact2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:scaleX="1"
        android:scaleY="1"
        android:text="S'inscrire" />

    <TextView
        android:id="@+id/dejaInscrit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/barre"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="10dp"
        android:text="Déjà inscrit ?" />

    <Button
        android:id="@+id/btnDejaInscrit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dejaInscrit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Se connecter" />

    <EditText
        android:id="@+id/enterMDPInscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mdpInscription"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="101dp"
        android:ems="10"
        android:hint="Mot de passe"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/prenomInscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="262dp"
        android:text="Prénom" />


    <TextView
        android:id="@+id/numeroInscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="261dp"
        android:text="Numéro" />

    <EditText
        android:id="@+id/enterFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="101dp"
        android:ems="10"
        android:hint="Prénom"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/enterNumeroInscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="101dp"
        android:ems="10"
        android:hint="Numéro"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/nomContactInscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/enterMDPInscription"
        android:layout_marginLeft="100dp"

        android:text="Nom du contact de confiance" />

    <TextView
        android:id="@+id/lienDeParente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/entreNomContact2"
        android:layout_marginLeft="100dp"
        android:text="Lien de parenté" />

    <TextView
        android:id="@+id/numeroContactConfiance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/enterLienParente2"
        android:layout_marginLeft="100dp"
        android:text="Numéro du contact de confiance" />


</RelativeLayout>